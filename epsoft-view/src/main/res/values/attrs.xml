<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!--公用属性-->
  <attr format="reference" name="leftDrawable"/>
  <attr format="string" name="leftText"/>
  <attr format="color" name="leftTextColor"/>
  <attr format="dimension" name="leftTextSize"/>
  <attr format="integer" name="spacing"/>
  <attr format="color" name="dividerColor"/>
  <attr format="enum" name="viewDivide">
    <!--隐藏线-->
    <enum name="gone" value="-1"/>
    <!--底部线条全显示-->
    <enum name="allBottom" value="0"/>
    <!--底部线条随文字显示-->
    <enum name="partBottom" value="1"/>
    <!--上下线条全显示-->
    <enum name="bothAll" value="2"/>
    <!--上线全显示，下线半显示-->
    <enum name="bothPartBottom" value="3"/>
    <!--底部线条全显示-->
    <enum name="allTop" value="4"/>
    <!--底部线条随文字显示-->
    <enum name="partTop" value="5"/>
  </attr>
  <attr format="enum" name="divideType">
    <enum name="gone" value="-1"/>
    <enum name="all" value="0"/>
    <enum name="bottom" value="1"/>
    <enum name="partBottom" value="2"/>
    <enum name="bothAll" value="3"/>
  </attr>

  <attr format="enum" name="textDirection">
    <enum name="left" value="0"/>
    <enum name="right" value="1"/>
  </attr>
  <attr format="enum" name="leftTextGravity">
    <enum name="center" value="0"/>
    <enum name="top" value="1"/>
  </attr>

  <declare-styleable name="PureColumnTextView">
    <attr format="string" name="pureText"/>
    <attr format="color" name="pureTextColor"/>
    <attr format="dimension" name="pureTextSize"/>
    <attr name="viewDivide"/>
    <attr name="textDirection"/>
    <attr name="dividerColor"/>
  </declare-styleable>


  <declare-styleable name="InputEditText">
    <attr name="spacing"/>
    <attr name="leftDrawable"/>
    <attr name="leftText"/>
    <attr name="leftTextColor"/>
    <attr name="leftTextSize"/>
    <attr name="divideType"/>
    <attr name="leftTextGravity"/>
    <attr name="dividerColor"/>
  </declare-styleable>
</resources>