<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="YYTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="navigationIcon">@drawable/vec_bar_back</item>
        <item name="android:textColor">?attr/titleTextColor</item>
    </style>

</resources>
